<!DOCTYPE html>
<html lang="en">
<%- include('partials/head', { title: lang.global.activity_feed }); %>
<body>
<%- include('partials/nav_bar', { selection: 1, pid: pid }); %>
<div id="body">
    <header id="header">
        <h1 id="page-title" class="left"><%= lang.global.activity_feed %></h1>
    </header>
    <div id="new-post-button-container" class="none">
        <a href="#" class="button" data-offset="10" onclick="loadFeedPosts(this)"><%= lang.global.more %></a>
        <div id="new-post"></div>
    </div>

    <div class="body-content post-list" id="activity-feed">
        <% if(posts.length === 0) {%>
            <p class="no-posts-text"><%= lang.activity_feed.empty %></p>
        <%} else { %>
            <% posts.forEach(function(post) { %>
                <%- include('partials/post_template', { post: post, mii_image_CDN: mii_image_CDN, lang: lang, reply: false, pid: pid  }); %>
            <% }); %>
        <%}%>
    </div>
</div>
<body onload="stopLoading();wiiuBrowser.lockUserOperation(false);">
</body>
</html>
